@model LeaveRequestCreateVM

@{
    ViewData["Title"] = "Apply For Leave";
}

<h4 class ="fw-bold" >Apply For Leave</h4>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LeaveTypeId" class="control-label fw-bold"></label>
                <select asp-for="LeaveTypeId" class ="form-select" asp-items="@Model?.LeaveType">
                    <option>Select Leave Type</option>
                </select>
                 <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
            </div>
            <br />
            <div class = "row">
               <div class="form-group col-md-4">
                <label asp-for="StartDate" class="control-label fw-bold"></label>
                <input asp-for="StartDate" class="form-control datepicker" type = "text"  />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
             <br />
            <div class="form-group col-md-4">
                <label asp-for="EndDate" class="control-label fw-bold"></label>
                <input asp-for="EndDate" class="form-control datepicker" type = "text" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
             <br /> 
            </div>
            
            
            <div class="form-group">
                <label asp-for="RequestComments" class="control-label fw-bold"></label>
                <textarea asp-for="RequestComments" class="form-control" ></textarea>
                <span asp-validation-for="RequestComments" class="text-danger"></span>
            </div>
            <br>
           <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <br />
            <div class = "form-group">
                <a asp-action="MyLeave" class = "btn btn-dark">Back to My Leaves</a>
            </div>
        </form>
    </div>
</div>



